  "shortcuts": [
    {
      "name": "Платформа",
      "short_name": "Platform",
      "description": "Основная платформа DSP",
      "url": "/platform",
      "icons": [
        {
          "src": "/images/icons/shortcut-platform.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "События",
      "short_name": "Events", 
      "description": "Актуальные события DSP",
      "url": "/events",
      "icons": [
        {
          "src": "/images/icons/shortcut-events.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Предложения",
      "short_name": "Offering",
      "description": "Инвестиционные предложения",
      "url": "/offering",
      "icons": [
        {
          "src": "/images/icons/shortcut-offering.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://dsp.gybernaty.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+dsp",
      "url": "/handle?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "application/pdf": [".pdf"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "text/csv": [".csv"]
      }
    }
  ],
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ]
} 